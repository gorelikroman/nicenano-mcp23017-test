/*
 * Тестовая конфигурация для Nice!Nano v2 с MCP23017
 * Проверка всех GPIO на обеих платах
 */

/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "Nice!Nano v2 Test with MCP23017";
    compatible = "nice,nano,v2", "nordic,nrf52840-qiaa", "nordic,nrf52840";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,console = &cdc_acm_uart;
        zmk,battery = &vbatt;
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    // Настройка GPIO для Nice!Nano v2
    // Левая сторона - GPIO Nice!Nano
    // Правая сторона - GPIO MCP23017
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)  RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";
        
        // Строки - используем GPIO Nice!Nano
        row-gpios
            = <&gpio0 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // P0.06
            , <&gpio0 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // P0.08  
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // P0.17
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // P0.20
            ;

        // Столбцы - комбинация Nice!Nano и MCP23017
        col-gpios
            // Nice!Nano GPIO
            = <&gpio0 22 GPIO_ACTIVE_HIGH>    // P0.22 - D4
            , <&gpio0 24 GPIO_ACTIVE_HIGH>    // P0.24 - D5
            , <&gpio1 0  GPIO_ACTIVE_HIGH>    // P1.00 - D6
            , <&gpio0 11 GPIO_ACTIVE_HIGH>    // P0.11 - D7
            , <&gpio1 4  GPIO_ACTIVE_HIGH>    // P1.04 - D8
            , <&gpio1 6  GPIO_ACTIVE_HIGH>    // P1.06 - D9
            
            // MCP23017 GPIO Port A (GPA0-GPA5)
            , <&mcp23017 0 GPIO_ACTIVE_HIGH>  // GPA0
            , <&mcp23017 1 GPIO_ACTIVE_HIGH>  // GPA1
            , <&mcp23017 2 GPIO_ACTIVE_HIGH>  // GPA2
            , <&mcp23017 3 GPIO_ACTIVE_HIGH>  // GPA3
            , <&mcp23017 4 GPIO_ACTIVE_HIGH>  // GPA4
            , <&mcp23017 5 GPIO_ACTIVE_HIGH>  // GPA5
            ;
    };

    // Настройка батареи для Nice!Nano
    vbatt: vbatt {
        compatible = "zmk,battery-voltage-divider";
        label = "BATTERY";
        io-channels = <&adc 2>;
        output-ohms = <2000000>;
        full-ohms = <(2000000 + 806000)>;
    };
};

// Конфигурация I2C для подключения MCP23017
&i2c0 {
    status = "okay";
    compatible = "nordic,nrf-twi";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    clock-frequency = <100000>;

    mcp23017: mcp23017@20 {
        compatible = "microchip,mcp23017";
        status = "okay";
        reg = <0x20>;
        label = "MCP23017";
        gpio-controller;
        #gpio-cells = <2>;
        ngpios = <16>;
    };
};

// Настройка пинов I2C
&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 31)>,    // P0.31 - SDA (D21)
                    <NRF_PSEL(TWIM_SCL, 0, 29)>;     // P0.29 - SCL (D20)
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 31)>,
                    <NRF_PSEL(TWIM_SCL, 0, 29)>;
            low-power-enable;
        };
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
        label = "CDC_ACM_0";
    };
};
